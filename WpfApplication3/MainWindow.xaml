<Window x:Class="DirectorySizeBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:DirectorySizeBrowser"
        Title="Directory Size Browser" Height="350" Width="525">
    <Window.Resources>
        <Style x:Key="dirButton">
            
        </Style>
    </Window.Resources>
    <DockPanel LastChildFill="True" x:Name="mainDock">
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Name="Up" Click="up_Button_Click">
                <TextBlock TextWrapping="Wrap">
                    Go up a level
                </TextBlock>
            </Button>
            <ProgressBar Grid.Column="1">
                
            </ProgressBar>
            <Button Grid.Column="2" Name="Restart" Click="restart_Button_Click">
                <TextBlock TextWrapping="Wrap">
                    Calculate from another directory
                </TextBlock>
            </Button>
            <Button Grid.Column="3" Name="Load" Click="load_Button_Click">
                <TextBlock TextWrapping="Wrap">
                    Load directory sizes
                </TextBlock>
            </Button>
        </Grid>
        <ScrollViewer>
            <ListBox 
                Name="listBox"
                ItemsSource="{Binding Path=SubDirs}" 
                IsSynchronizedWithCurrentItem="True">
               <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Click="browseDown_Button_Click" Name="browseDown">
                            <TextBlock>
                                <TextBlock Text="{Binding Path=Size}" />
                                <TextBlock Text="{Binding Path=DirPath}" />
                                <TextBlock Text="{Binding Path=SubDirCount}" />
                            </TextBlock>
                        </Button>
                    </DataTemplate>
                </ListBox.ItemTemplate> 
            </ListBox>
        </ScrollViewer>
    </DockPanel>
</Window>
